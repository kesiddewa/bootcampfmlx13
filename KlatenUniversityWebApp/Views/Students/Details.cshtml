@model StudentDTO

<dt class="col-sm-2">    @Html.DisplayNameFor(model => model.StudentName)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.StudentName)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Enrollments)
</dt>
<dd class="col-sm-10">
    @if (Model.Enrollments != null && Model.Enrollments.Any())
    {
        <table class="table">
            <tr>
                <th>Course Title</th>
                <th>Grade</th>
            </tr>
            @foreach (var item in Model.Enrollments)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No enrollments found for this student.</p>
    }
</dd>